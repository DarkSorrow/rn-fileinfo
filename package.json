{
  "name": "@novastera-oss/rn-fileinfo",
  "version": "0.2.0",
  "description": "Lightweight React Native TurboModule for safe and efficient file metadata access on iOS and Android",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./app.plugin.js": "./app.plugin.js",
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "*.podspec",
    "react-native.config.js",
    "app.plugin.js",
    "expo-module.config.json",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --build",
    "typecheck:watch": "tsc --build --watch",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "test:plugin": "node test-plugin.js",
    "prepare": "bob build",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "file-info",
    "file-metadata",
    "filesystem",
    "turbo-module",
    "expo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DarkSorrow/rn-fileinfo.git"
  },
  "author": "DarkSorrow <contact@novastera.com> (https://novastera.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/DarkSorrow/rn-fileinfo/issues"
  },
  "homepage": "https://github.com/DarkSorrow/rn-fileinfo#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@expo/config-plugins": "10.1.2",
    "@react-native-community/cli": "20.0.1",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "expo-module-scripts": "^4.1.9",
    "jest": "^30.1.0",
    "prettier": "^3.0.3",
    "react": "^19.0.0",
    "react-native": "^0.79.2",
    "react-native-builder-bob": "^0.40.12",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "tsc": "./node_modules/.bin/tsc"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RnFileinfo",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.novastera.rnfileinfo"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.54.2"
  }
}
